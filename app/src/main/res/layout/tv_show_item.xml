<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardView_height"
    android:layout_marginEnd="@dimen/cardView_margin"
    android:layout_marginStart="@dimen/cardView_margin"
    android:layout_marginTop="@dimen/cardView_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewTvShowPoster"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewTvShowReleaseDate"
            android:layout_width="@dimen/releaseDate_width_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/cardView_margin"
            android:layout_marginStart="@dimen/cardView_margin"
            android:layout_marginTop="@dimen/cardView_margin"
            android:alpha="0.7"
            app:layout_constraintEnd_toStartOf="@id/imageViewRatingStarTvShow"
            app:layout_constraintStart_toEndOf="@id/imageViewTvShowPoster"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2018" />

        <ImageView
            android:id="@+id/imageViewRatingStarTvShow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_star"
            app:layout_constraintEnd_toStartOf="@id/textViewTvShowRating"
            app:layout_constraintStart_toEndOf="@id/textViewTvShowReleaseDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTvShowTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewTvShowPoster"
            app:layout_constraintTop_toBottomOf="@id/textViewTvShowReleaseDate"
            tools:text="Tv Show Title" />


        <TextView
            android:id="@+id/textViewTvShowRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewRatingStarTvShow"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8.7" />

        <Button
            android:id="@+id/buttonAddToWatchlistTvShow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_width_30"
            android:layout_marginBottom="@dimen/cardView_margin"
            android:layout_marginEnd="@dimen/cardView_margin"
            android:background="@color/colorAccent"
            android:text="@string/add_to_watchlist"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>