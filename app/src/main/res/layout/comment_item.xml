<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/cardView_margin"
    android:layout_marginStart="@dimen/cardView_margin"
    android:layout_marginTop="@dimen/cardView_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewUserProfilePicture"
            android:layout_width="@dimen/width_height_50"
            android:layout_height="@dimen/width_height_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewCommentUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:textSize="@dimen/textSize_17"
            app:layout_constraintLeft_toRightOf="@id/imageViewUserProfilePicture"
            tools:text="Username" />

        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginEnd="@dimen/cardView_margin"
            android:layout_marginStart="@dimen/margin_66"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintLeft_toRightOf="@id/imageViewUserProfilePicture"
            app:layout_constraintTop_toBottomOf="@id/textViewCommentUsername"
            tools:text="commentcommentcommentcommentcommentcommentcommentcommentcommentcommentcommentcommentcommentcommentcomment" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>